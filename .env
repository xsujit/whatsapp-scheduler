# ─── Server ───────────────────────────────────────────────────────────────────
# In Docker, LOCALHOST must be 0.0.0.0 so the container accepts connections.
# compose.yaml sets this automatically; you do not need to set it here.
LOCALHOST=0.0.0.0
PORT=3001
NODE_ENV=production
APP_TIMEZONE=Europe/Amsterdam
ALLOW_REGISTRATION=true
DROP_SCHEDULED_MESSAGES=false
CLIENT_ORIGIN=https://your-domain.com

# ─── Auth ─────────────────────────────────────────────────────────────────────
BETTER_AUTH_URL=http://localhost:3001
BETTER_AUTH_SECRET=4MEnV74fjfKXlEljdtzxUmsawDycKC6d

# ─── Redis / DragonflyDB ──────────────────────────────────────────────────────
# REDIS_HOST is set automatically by compose.yaml (dragonfly service name).
# REDIS_PASSWORD must match the --requirepass flag passed to DragonflyDB.
# Leave blank to run without a password (not recommended for production).
REDIS_HOST=dragonfly
REDIS_PORT=6379
REDIS_PASSWORD=CfAcQX11wC9OfaXt26LY7TtFCZzpnvZb

# ─── Database ─────────────────────────────────────────────────────────────────
# DB_PATH is set automatically by compose.yaml (data/app.db inside the volume).
# You do not need to change this.
DB_PATH=data/app.db
