{
	"name": "whatsapp-scheduler-server",
	"version": "1.0.0",
	"description": "Backend for WhatsApp Scheduler",
	"main": "src/index.js",
	"type": "module",
	"imports": {
		"#config": "./src/config/index.js",
		"#controllers/*": "./src/controllers/*.js",
		"#db": "./src/db/index.js",
		"#db/*": "./src/db/*.js",
		"#lib/*": "./src/lib/*.js",
		"#middleware/*": "./src/middleware/*.js",
		"#queues/*": "./src/queues/*.js",
		"#routes/*": "./src/routes/*.js",
		"#services/*": "./src/services/*.js",
		"#types/*": "./src/types/*.js",
		"#utils/*": "./src/utils/*.js"
	},
	"scripts": {
		"start": "concurrently \"npm run start:api\" \"npm run start:worker\"",
		"start:api": "node src/bin/server.js",
		"start:worker": "node src/bin/worker.js",
		"dev": "concurrently -n \"API,WORKER\" -c \"blue,magenta\" \"npm run dev:api\" \"npm run dev:worker\"",
		"dev:api": "nodemon src/bin/server.js",
		"dev:worker": "nodemon src/bin/worker.js",
		"lint": "eslint src/"
	},
	"keywords": [],
	"author": "Sujit",
	"license": "ISC",
	"dependencies": {
		"@bull-board/api": "^6.20.3",
		"@bull-board/express": "^6.20.3",
		"@bull-board/ui": "^6.20.3",
		"baileys": "^7.0.0-rc.9",
		"better-auth": "^1.4.20",
		"better-sqlite3": "^12.6.2",
		"bullmq": "^5.70.1",
		"cors": "^2.8.6",
		"dotenv": "^17.3.1",
		"express": "^5.2.1",
		"express-rate-limit": "^8.2.1",
		"ioredis": "^5.10.0",
		"kysely": "^0.28.11",
		"luxon": "^3.7.2",
		"node-cache": "^5.1.2",
		"pino": "^10.3.1",
		"pino-pretty": "^13.1.3",
		"qrcode-terminal": "^0.12.0",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"concurrently": "^9.2.1",
		"nodemon": "^3.1.14"
	},
	"engines": {
		"node": ">=22.0.0"
	}
}